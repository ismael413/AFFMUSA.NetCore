@model Client

@{
    ViewBag.PageTitle = "Create Client";
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Clients Management</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">List</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Create">Create</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<form asp-action="details" asp-controller="home" method="post">
    <div class="container-fluid">
        @*encabezado del formulario*@
        <h6>Company data</h6>
        <hr>
        <div>
            <div class="row m-2">
                <label asp-for="Company_Name" class="col-sm-1 col-form-label  ">Company:</label>
                <div class="col-sm-10">
                    <input asp-for="Company_Name" class="form-control" placeholder="Company Name *">
                    <span asp-validation-for="Company_Name" class="text-danger"></span>
                </div>
            </div>
        </div>
        <hr>
        <h6>Client data</h6>
        <hr>
        <br />

        <h7>Contact Identification:</h7>
        <hr>
        <div class="row m-2">
            <label asp-for="Contact_Name" class="col-sm-1 col-form-label  ">Name:</label>
            <div class="col-sm-10">
                <input asp-for="Contact_Name" class="form-control" placeholder=" Contact Name *">
                <span asp-validation-for="Contact_Name" class="text-danger"></span>
            </div>
        </div>

        @*FOTO*@
        <div class="form-group row">
            <label asp-for="Photo" class="col-sm-1 col-form-label">Photo:</label>
            <div class="col-sm-10">
                <div class="custom-file">
                    <input asp-for="Photo" class="form-control custom-file-input">
                    <label class="custom-file-label">Choose Photo...</label>
                </div>
            </div>
        </div>

        <div class="row m-2">
            <label asp-for="Job_Title" class="col-sm-1 col-form-label  ">Job Title:</label>
            <div class="col-sm-10">
                <input asp-for="Job_Title" class="form-control" placeholder="Job Title *">
                <span asp-validation-for="Job_Title" class="text-danger"></span>
            </div>
        </div>
        <br />

        <h7>Contact Information:</h7>
        <hr>
        <div class="row m-2">
            <label asp-for="Email" class="col-sm-1 col-form-label  ">Email:</label>
            <div class="col-sm-10">
                <input asp-for="Email" class="form-control" placeholder="Email *">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        @*-------------------------------------------------------------------*@

        @*CONTACTOS y LOCALIZACION*@
        <div class="row m-1">
            <label asp-for="Phone" class="col-sm-1 col-form-label  ">Phone:</label>
            <div class="col-sm-8">
                <input asp-for="Phone" class="form-control" placeholder="Phone *">
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="col-sm-2">
                <input asp-for="Ext" class="form-control w-100" placeholder="Ext *">
                <span asp-validation-for="Ext" class="text-danger"></span>
            </div>
        </div>

        <div class="row m-1">
            <label asp-for="Fax" class="col-sm-1 col-form-label  ">Fax:</label>
            <div class="col-sm-10">
                <input asp-for="Fax" class="form-control" placeholder="Fax *">
                <span asp-validation-for="Fax" class="text-danger"></span>
            </div>
        </div>
        <br />
        <h7>Adress Information:</h7>
        <hr>
        <div class="row m-1">
            <label asp-for="City" class="col-sm-1 col-form-label  ">City:</label>
            <div class="col-sm-5">
                <input asp-for="City" class="form-control" placeholder="City *">
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            @*<div class="btn-group dropup">
                <label asp-for="State" class="col-sm-1 col-form-label  mr-3"></label>
                <div class="col-sm-5">
                    <select asp-for="State" class="custom-select ml-4 w-100"
                           >
                        <option value="">State </option>
                    </select>
                    <span asp-validation-for="State" class="text-black-50 small"></span>
                </div>
            </div>*@
        </div>

        <div class="row m-1">
            <label asp-for="ZipCode" class="col-sm-1 col-form-label  ">ZipCode:</label>
            <div class="col-sm-5">
                <input asp-for="ZipCode" class="form-control" placeholder="ZipCode *">
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>
            @*<div class="btn-group dropup">
                <label asp-for="Country" class="col-sm-1 col-form-label  mr-3"></label>
                <div class="col-sm-5">
                    <select asp-for="Country" class="custom-select ml-4 w-100"
                            >
                        <option value="">Country </option>
                    </select>
                    <span asp-validation-for="Country" class="text-black-50 small"></span>
                </div>
            </div>*@
        </div>
        <hr>
        <div class="row m-1">
            <label asp-for="Notes" class="col-sm-1 col-form-label  ">Notes:</label>
            <div class="col-sm-10">
                <input asp-for="Notes" class="form-control" placeholder="Notes *">
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
        </div>
    </div>
        <hr>
        @*-------------------------------------------------------------------*@


        @*ADVANCED OPTIONS*@
        <p>
            <a class="btn btn-outline-secondary" data-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample">
                ADVANCED OPTIONS
            </a>
        </p>
        <div class="collapse" id="collapseExample">
            <div class="row">
                <div class="col-sm">
                    Allow Billing
                    <label class="switch">
                        <input type="checkbox">
                        <span class="slider"></span>
                    </label>
                </div>
            </div>
        </div>
        <hr>

        @*-------------------------------------------------------------------*@


        <div asp-validation-summary="All" class="text-black-50 small"></div>
        <span asp-validation-for="Company_Name" class="text-black-50 small"></span>

        <div class="form-group row">
            <button type="submit" class="btn btn-outline-secondary">Create</button>
        </div>

</form>


    @section Scripts{
        <script type="text/javascript">
            $(document).ready(function () {
                $(".custom-file-input").on("change", function () {
                    var filename = $(this).val().split("\\").pop();
                    $(this).next(".custom-file-label").html(filename);
                });
            });
        </script>

        <script type="text/javascript" src="~/js/site.js">

        </script>

    }

